<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_team"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/team_picture"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_name"
            android:text="Denis Mesheryakov"
            android:layout_toRightOf="@+id/team_picture"
            android:layout_toEndOf="@+id/team_picture"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_about"
            android:text="Curator of course:\nHTML layout and CSS"
            android:layout_toRightOf="@+id/team_picture"
            android:layout_toEndOf="@+id/team_picture"
            android:layout_below="@+id/team_name"
            android:textSize="16sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>